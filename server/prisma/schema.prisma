generator client {
provider = "prisma-client-js"
}


datasource db {
provider = "sqlite"
url = env("DATABASE_URL")
}


model User {
id String @id @default(cuid())
email String @unique
passwordHash String
createdAt DateTime @default(now())
items InventoryItem[]
}


model InventoryItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  name      String
  qty       Int      @default(1)
  status    String   @default("HAVE")  // store as string
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
